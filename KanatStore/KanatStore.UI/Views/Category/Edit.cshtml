@model KanatStore.UI.Models.CategoryDetailViewModel
@{
    ViewBag.Title = "Sửa danh mục";
}
<!DOCTYPE html>
<html>
<head>
    <link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote.css" rel="stylesheet">
</head>
<body>
    <h1>Sửa danh mục</h1>
    <div><a asp-action="Index">Quay lại</a></div>
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="row form-group">
                <div class="col-2 ">
                    @Html.DisplayNameFor(Model=>Model.CategoryDetail.Name)
                </div>
                <div class="col-10">
                    <input asp-for="CategoryDetail.Name" class="form-control"/>
                    <span asp-validation-for="CategoryDetail.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-2">
                    @Html.DisplayNameFor(Model=>Model.CategoryDetail.Description)
                </div>
                <div class="col-10">
                    <textarea asp-for=CategoryDetail.Description class="form-control" id="mota"></textarea>
                    <span asp-validation-for="CategoryDetail.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" onclick="message(@ViewBag.mess)"/>
            </div>
        </form>
    </div>
    
@section JS{
    <script type="text/javascript">
        function message(@ViewBag.mess) {
            alert(@ViewBag.mess);
    }
    </script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote.js"></script>
<script type="text/javascript">
    $(document).ready(function(){
        $("#mota").summernote({
            height: 250,
            minHeight: null,
            maxHeight: null,
            fontSizes: ['12', '14', '16', '18', '24', '36', '48'],
            toolbar: [
                // [groupName, [list of button]]
                ['style', ['bold', 'italic', 'underline', 'clear']],
                ['font', ['strikethrough', 'superscript', 'subscript']],
                ['fontsize', ['fontsize']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['height', ['height']]
            ]
        });
    });
</script>
}
</body>
</html>