@model List<KanatStore.BLL.Dto.StoreDto>
@{
    ViewBag.Title = "Thông tin cửa hàng";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .mess{
            font-size: 30px;
            opacity: 0.3;
            text-align: center;
            padding: 100px;
        }
        .row.heading{
            font-weight: bolder;
            background-color: rgba(0,110, 225, 0.4);
            padding:18px 0;
            margin-bottom: 25px;
            font-size: 18px;
        }
        .col-1{
            text-align: center;
        }

        .row.listcate {
            margin-top: -10px;
            margin-bottom: -10px;
            height: auto;
            padding: 20px 0px;
        }
        .row.listcate:hover{
            background-color: rgba(0,110, 225, 0.1);
        }
    </style>
</head>
<body>
    <h1>Thông tin cửa hàng</h1>
    <a asp-action="Create">Thêm mới</a>
    <hr />
        <div class="row heading">
            <div class="col-1">
                STT
            </div>
            <div class="col-2">
                @Html.DisplayNameFor(model=>model.FirstOrDefault().Name)
            </div>
            <div class="col-3">
                @Html.DisplayNameFor(model=>model.FirstOrDefault().Address)
            </div>
            <div class="col-2">
                @Html.DisplayNameFor(model=>model.FirstOrDefault().PhoneNumber)
            </div>
            <div class="col-3">
                @Html.DisplayNameFor(model=>model.FirstOrDefault().Email)
            </div>
        </div>
        @{
            int i = 1;
        }
        @foreach(var item in Model)
        {
            <div class="row listcate">
                <div class="col-1">
                    @i
                </div>
                <div class="col-2">
                    @Html.DisplayFor(model=>item.Name)
                </div>
                <div class="col-3">
                    @Html.DisplayFor(model=>item.Address)
                </div>
                <div class="col-2">
                    @Html.DisplayFor(model=>item.PhoneNumber)
                </div>
                <div class="col-3">
                    @Html.DisplayFor(model=>item.Email)
                </div>
                <div class="col-1">
                <a class="bi bi-pencil-square" asp-action="Edit" asp-route-id="@item.Id">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="24" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                      <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                      <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                    </svg>
                </a>|
                    <a class="fas fa-fw fa-trash" asp-action="Delete" asp-route-id="@item.Id"></a>
                </div>
            </div> 
            i++;
        }
        @if (ViewBag.message != null)
        {
            <div class="mess">@ViewBag.message</div>
        }
</body>
</html>

